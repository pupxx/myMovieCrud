<h1>Edit a Movie</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <form method="POST" action="/movies/{{singleMovie.id}}?_method=PUT">
        <div class="form-group">
          <label for="movieTitle">Movie Title</label>
          <input type="text" name="title" class="form-control" id="movieTitle" placeholder="title" value="{{singleMovie.title}}">
        </div>
        <div class="form-group">
          <label for="movieTitle">Director</label>
          <input type="text" name="director" class="form-control" id="movieDirector" placeholder="director" value="{{singleMovie.director}}">
        </div>
        <div class="form-group">
          <label for="movieYear">Year</label>
          <input type="text" name="year" class="form-control" id="movieYear" placeholder="Movie year" value="{{singleMovie.year}}">
        </div>
        <div class="form-group">
          <label for="movieRating">Movie Rating</label>
          <input type="number" name="rating" min="0" max="5" id="movieRating" value="{{singleMovie.rating}}">
        </div>
        <div class="form-group">
          <label for="moviePoster">Movie Poster</label>
          <input type="text" name="poster" id="moviePoster" value={{singleMovie.poster_url}}>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
